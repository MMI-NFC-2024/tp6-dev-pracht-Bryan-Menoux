---
import Layout from "../../layouts/Layout.astro";
import penguins from "../../assets/penguins.json";
import olympians from "../../assets/olympians.json";

const speciesList = [
  ...new Set(penguins.map((penguin) => penguin.species).filter(Boolean)),
];
const penguinLinks = speciesList.map((species) => ({
  label: species,
  href: `/rendu-statique/${species.toLowerCase()}`,
  badge: "Palmer Penguins",
  description: "Voir la page statique",
  accent: "emerald",
}));

const sports = [
  ...new Set(olympians.map((athlete) => athlete.sport).filter(Boolean)),
];
const olympianLinks = sports.map((sport) => ({
  label: sport,
  href: `/rendu-statique/${sport.toLowerCase()}`,
  badge: "Olympians",
  description: "Voir la discipline statique",
  accent: "sky",
}));

const sections = [
  {
    title: "Manchots",
    badge: "Palmer Penguins",
    accent: "emerald",
    items: penguinLinks,
  },
  {
    title: "Athlètes",
    badge: "Olympians",
    accent: "sky",
    items: olympianLinks,
  },
];
---

<Layout>
  <div class="min-h-screen bg-slate-950 text-slate-100">
    <div class="mx-auto flex max-w-4xl flex-col gap-12 px-6 py-16">
      <header class="space-y-3">
        <p
          class="text-sm font-semibold uppercase tracking-[0.25em] text-emerald-300/80"
        >
          Pages statiques
        </p>
        <h1 class="text-4xl font-semibold tracking-tight">
          Sélectionner un rendu statique
        </h1>
        <p class="text-sm text-slate-300 sm:text-base">
          Choisissez une espèce ou une discipline pour charger la page générée à
          la construction.
        </p>
      </header>
      {
        sections.map(({ title, badge, accent, items }) => (
          <section class="space-y-4">
            <div class="space-y-2">
              <p
                class={`text-xs uppercase tracking-[0.3em] text-${accent}-300/80`}
              >
                {badge}
              </p>
              <h2 class="text-2xl font-semibold">{title}</h2>
            </div>
            <ul class="grid gap-4 sm:grid-cols-2">
              {items.map(
                ({
                  label,
                  href,
                  badge: itemBadge,
                  description,
                  accent: itemAccent,
                }) => (
                  <li>
                    <a
                      href={href}
                      class={`group block rounded-2xl border border-white/10 bg-slate-900/60 p-6 shadow-lg shadow-slate-950/40 transition hover:border-${itemAccent ?? accent}-300/60 hover:bg-slate-900/80`}
                    >
                      <span
                        class={`text-xs uppercase tracking-[0.2em] text-${itemAccent ?? accent}-300/80`}
                      >
                        {itemBadge ?? badge}
                      </span>
                      <span class="mt-3 block text-2xl font-semibold group-hover:text-slate-50">
                        {label}
                      </span>
                      <span class="mt-2 block text-sm text-slate-400 group-hover:text-slate-200">
                        {description}
                      </span>
                    </a>
                  </li>
                )
              )}
            </ul>
          </section>
        ))
      }
    </div>
  </div>
</Layout>
