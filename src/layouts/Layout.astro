---
import "../styles/global.css";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Palmer Penguins</title>
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100">
    <header
      class="sticky top-0 z-50 border-b border-white/10 bg-slate-950/80 backdrop-blur"
    >
      <div
        class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4"
      >
        <a
          href="/"
          class="text-lg font-semibold tracking-tight text-emerald-200"
          >Penguins</a
        >
        <nav class="flex items-center gap-6 text-sm font-medium text-slate-300">
          <a href="/" class="transition hover:text-emerald-200">Accueil</a>
          <a href="/rendu-dynamique" class="transition hover:text-emerald-200"
            >Rendu dynamique</a
          >
          <a href="/rendu-statique" class="transition hover:text-emerald-200"
            >Rendu statique</a
          >
        </nav>
      </div>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>
